<div class="home-banner">
  <h1>Cocktail list</h1>
  <p>
    <span id="banner-typed-text"></span>
  </p>
</div>


<div class="container my-5">
  <div class="row justify-content-around">
      <% @cocktails.each do |cocktail| %>
      <div class="col-sm-3">
        <div class="card">
          <%= link_to cocktail.name, cocktail_path(cocktail) %>
        </div>
      </div>
      <% end %>
  </div>
</div>


